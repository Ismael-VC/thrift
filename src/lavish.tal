( # Lavish )
%DBG ( -- ) { [ LIT2 01 -System/debug ] DEO }
|0e @System/debug  $1
|10 @Console/vector $2 &read $1 &pad $5 &write $1 &error $1

|100 @on-reset ( -> ) ;on-console .Console/vector DEO2 !main


( ## Thrift Instructions )
%:quot { 00 }
%:unqt { 01 }

@thrift [
    a0ff e780 1037 0080  1216 2000 0da0 fff4
    8010 3700 8012 1640  ffe6 8000 1300 0000 
] &end


( ## Remote Pseudo Opcodes )
@:OPC ( op -- )
    ,/op STR
    ;/start ;/end !:asm/send-blk
    &start [
        :quot &op $1 :unqt
    ] &end


( ### Literal Opcodes )
%quote-raw-byte { STH2kr LDA INC2r ,/byte STR }
%quote-raw-short { STH2kr LDA2 INC2r INC2r ,/lo-byte STR ,/hi-byte STR }
@:BRK ( -- ) [ LIT BRK ] !:OPC
@:LIT ( -- :byte )
    quote-raw-byte
    ;/command #0002 !:asm/send-len
    &command [ :quot &byte $1 ]

@:LIT2 ( -- :short* )
    quote-raw-short
    ;/command #0004 !:asm/send-len
    &command [ :quot &hi-byte $1 :quot &lo-byte $1 ]

@:LITr ( -- | :byte )
    quote-raw-byte
    ;/command #0005 !:asm/send-len
    &command [ :quot &byte $1 :quot STH :unqt ]

@:LIT2r ( -- | :short* )
    quote-raw-short
    ;/command #0007 !:asm/send-len
    &command [ :quot &hi-byte $1 :quot &lo-byte $1 :quot STH2 :unqt ]

