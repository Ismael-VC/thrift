( ## Remote Library )
%:QUOT { [ LIT2 :quot -Console/write ] DEO }
%:UNQT { [ LIT2 :unqt -Console/write ] DEO }
%:dbg ( -- ) { :quot 01 :quot -System/debug :quot DEO :unqt }
%:emit ( :byte -- ) { :quot -Console/write :quot DEO :unqt }
@:DBG ( -- ) [ :LIT2 01 -System/debug ] !:DEO
@:EMIT ( :byte -- byte ) [ :LIT -Console/write ] !:DEO
@:EMIT2 ( :short -- short ) :SWP :EMIT !:EMIT
@:asm/reset ( -- ) #0100 ( >> )
@:asm/set ( addr* -- ) ,/pointer STR2 JMP2r
@:asm/get ( -- addr* ) ,/pointer LDA2 JMP2r
@:asm/send-len ( start* len* -- ) ADD2k NIP2 ( >> )
@:asm/send-blk ( start* end* -- ) ;emit !/for-each
@:asm/cpy-len ( start* len* -- ) ADD2k NIP2 ( >> )
@:asm/cpy-blk ( start* end* -- ) ;/write ( >> )
@:asm/for-each ( start* end* fn* -- )
    STH2 SWP2
    &loop
        LDAk STH2kr JSR2
        INC2 GTH2k ?/loop
    POP2 POP2 POP2r
    JMP2r

@:asm/write ( byte -- )
    [ LIT2 &pointer 0100 ] INC2k ,/pointer STR2
    ,/lo-byte STR ,/hi-byte STR ,/byte STR
    ;/start ;/end !/send-blk
    &start [
        :quot &byte $1 :quot &hi-byte $1 :quot &lo-byte $1 :quot STA :unqt
    ] &end

@:asm/init ( -- )
    #ffe0 :asm/set
    ;thrift ;thrift/end :asm/cpy-blk
    :asm/reset
    [ :LIT2 ffe0 ] :JMP2
    JMP2r


( ## Local Library )
@on-console ( -> ) .Console/read DEI BRK
@emit ( byte -- ) .Console/write DEO JMP2r
@EMIT ( byte -- :byte ) :QUOT !emit
@EMIT2 ( short -- :short ) SWP EMIT !EMIT


